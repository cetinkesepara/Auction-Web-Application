
@{
    ViewBag.Title = "Giriş Yap";
    Layout = "~/Views/_LayoutHomePage.cshtml";
}



<section id="login">
<div class="container">
    <div class="row">
        <div class="col-12">
            @if (ViewBag.email_hata != null)
            {
                <div class="alert alert-danger">
                    <button type="button" class="close" data-dismiss="alert" style="background-color:#F2DEDE">
                        <i class="ace-icon fa fa-times"></i>
                    </button><br>
                    <div>
                        @ViewBag.email_hata
                    </div>
                    <br>
                </div>
            }

            @if (ViewBag.kayit_onay != null)
            {
                <div class="alert alert-success">
                    <button type="button" class="close" data-dismiss="alert" style="background-color:#F2DEDE">
                        <i class="ace-icon fa fa-times"></i>
                    </button><br>
                    <div>
                        @ViewBag.kayit_onay
                    </div>
                    <br>
                </div>
            }

            <div class="uyeGirisi">
                <form action="@Url.Action("Index","Girisyap")" method="post">
                    <h3>Üye Girişi</h3>

                    @if (ViewBag.LoginError != null)
                    {
                        <div class="alert alert-danger">
                            <button type="button" class="close" data-dismiss="alert" style="background-color:#F2DEDE">
                                <i class="ace-icon fa fa-times"></i>
                            </button><br>
                            <div>
                                @ViewBag.LoginError
                            </div>
                            <br>
                        </div>
                    }

                    <div class="form-group">
                        <input type="email" class="form-control" required name="email" placeholder="E-mail Adresiniz">
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" required name="sifre" placeholder="Şifreniz">
                    </div>
                    <div class="form-inline">
                        <div class="form-check">
                            <label class="form-check-label">
                                <input type="checkbox" class="form-check-input">
                                Beni Hatırla
                            </label>
                        </div>
                        <button type="submit" class="btn btn-primary">Giriş Yap</button>
                    </div>
                    <div class="form-inline">
                        <div class="l1">
                            <a href="#">Şifremi Unuttum</a>
                        </div>
                        <div class="l2">
                            <a href="#">Üye Olmak İstiyorum</a>
                        </div>
                    </div>
                </form>
            </div>
