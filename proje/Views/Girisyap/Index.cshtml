<script src="~/Assets/home/js/jquery-3.2.1.min.js"></script>
<script>
    $(document).ready(function () {
        setInterval(function () { kayitKontrol(); }, 1500);
    });

    function kayitKontrol() {
        var email = $("#email").val();
        var email_tekrar = $("#email_tekrar").val();
        var sifre = $("#sifre").val();
        var sifre_tekrar = $("#sifre_tekrar").val();

        if (email != email_tekrar) {
            $("#email_hata").show();
        }
        else {
            $("#email_hata").hide();
        }

        if (sifre != sifre_tekrar) {
            $("#sifre_hata").show();
        }
        else {
            $("#sifre_hata").hide();
        }

        if (sifre.length > 0 && sifre.length < 6) {
            $("#sifre_eksik").show();
        }
        else {
            $("#sifre_eksik").hide();
        }
    }
</script>

