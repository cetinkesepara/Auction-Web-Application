            <div class="sifreUnut">
                <div class="sifreUnutKapat"><a href="#">x</a></div>
                <div class="sifreUnutForm">
                    <form>
                        <h3>Şifremi Unuttum</h3>
                        <div class="form-group">
                            <input type="email" class="form-control" required name="email" placeholder="E-mail Adresiniz *">
