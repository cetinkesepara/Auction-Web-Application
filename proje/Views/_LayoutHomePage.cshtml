                        <h3>ÜRÜN GEÇMİŞİ</h3>
                        <a href="#"><i class="fa fa-handshake-o" aria-hidden="true"></i> Satılan Ürünler</a>
                    </div>
                </div>
            </div>
        </section>
    <section id="copyright">
            <div class="container">
                <div class="row">
                    <div class="col-12 text-center">
                        <a class="copy" href="#">Copyright 2017-2018 | </a>
                        <a class="uSoz" href="#">Üyelik Sözleşmesi</a>
                    </div>
                </div>
            </div>
        </section>  



    <!-- Scriptler -->
    <script src="~/Assets/home/js/jquery-3.2.1.min.js"></script>
    <script src="~/Assets/home/js/bootstrap.min.js"></script>
    <script src="~/Assets/home/js/fotorama.js"></script>
    <script src="@Url.Content("~/Assets/DataTables/datatables.min.js")"></script>
    <script src="~/Assets/home/js/jquery.bxslider.min.js"></script>
    <script src="@Url.Content("~/Assets/ckeditor/ckeditor.js")"></script>
    <script src="@Url.Content("~/Assets/ckeditor/config.js")"></script>
    <script src="~/Assets/home/js/jquery.countdown.min.js"></script>
    <script src="~/Assets/home/js/main.js"></script>
    <script>
        /*Tablolar için pagination ayarları*/
        $(document).ready(function () {
            $('.data_table_pagination').DataTable({
                "language": {
                    "info": "_TOTAL_ Sonuçtan _START_ - _END_ arası gösteriliyor",
                    "infoEmpty": "0 Sonuçtan 0 - 0 arası gösteriliyor",
                    "lengthMenu": "_MENU_ Sonucu göster",
                    "search": "Arama:",
                    "emptyTable": "Tabloda veri yok",
                    "paginate": {
                        "next": "Sonraki",
                        "previous": "Önceki"
                    }
                }
            });
        });

        function getCountDown() {

           
                $('[data-countdown]').each(function () {
                    var $this = $(this), finalDate = $(this).data('countdown');
                    var finalDateArrayOne = finalDate.split(".");
                    var finalDateArrayTwo = finalDateArrayOne[2].split(" ");
                    var finalDateLast = finalDateArrayTwo[0] + "/" + finalDateArrayOne[1] + "/" + finalDateArrayOne[0] + " " + finalDateArrayTwo[1];

                    $this.countdown(finalDateLast, function (event) {
                        $this.html(event.strftime('%D Gün %H:%M:%S'));
                    }).on('finish.countdown', function (event) {
                        $(this).parent()
                            .html('<h3>Süre</h3><div class="time">-</div>');
                        location.reload();
                    });

                });
          
        }
        
        
    </script>
</body>
</html>
