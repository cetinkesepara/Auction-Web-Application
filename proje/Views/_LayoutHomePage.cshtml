                        <a href="@Url.Action("Hakkinda","Anasayfa")"><i class="fa fa-hand-pointer-o" aria-hidden="true"></i> Hakkında</a>
                    </div>
                    <div class="col-md-3 col-sm-6">
                        <h3>SOSYAL MEDYA</h3>
                        <a href="@Url.Action("Sosyal","Anasayfa", new { s = 1})"><i class="fa fa-facebook" aria-hidden="true"></i> Facebook</a><br>
                        <a href="@Url.Action("Sosyal","Anasayfa", new { s = 2})"><i class="fa fa-twitter-square" aria-hidden="true"></i> Twitter</a><br>
