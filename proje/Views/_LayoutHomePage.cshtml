                                        <a class="nav-link" href="@Url.Action("Index","Anasayfa")">AÇIK ARTTIRMALAR</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="@Url.Action("BizeYazin","Anasayfa")">BİZE YAZIN</a>
                                    </li>
                                    @if (Session["uye_email"] == null)
                                    {
