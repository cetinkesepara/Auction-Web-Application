@model IEnumerable<proje.Areas.admin.Models.zamanlar>

@{
    ViewBag.Title = "TeklifZamanlari";
    Layout = "~/Areas/admin/Views/_LayoutAdminPage.cshtml";
}

<div class="connection_way">
    <i class="fa fa-home" aria-hidden="true"></i> <a href="@Url.Action("Index","Home")">Anasayfa</a>
    <span class="con_point">> </span><span>Teklif Zamanları</span>
</div>

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="head_page"><h3>Teklif Zamanları</h3></div>

            @if (ViewBag.ZamanEkleSonuc != null)
            {
                <div class="alert alert-success">
                    <button style="float:right" type="button" class="close" data-dismiss="alert">
                        <i class="ace-icon fa fa-times"></i>
                    </button><br>
                    <div>
                        @ViewBag.ZamanEkleSonuc
                    </div>
                    <br>
                </div>
            }
            @if (ViewBag.ZamanEkleHata != null)
            {
                <div class="alert alert-danger">
                    <button style="float:right" type="button" class="close" data-dismiss="alert">
                        <i class="ace-icon fa fa-times"></i>
                    </button><br>
                    <div>
                        @ViewBag.ZamanEkleHata
                    </div>
                    <br>
                </div>
            }

            @if (ViewBag.ZamanSil != null)
            {
                <div class="alert alert-success">
                    <button style="float:right" type="button" class="close" data-dismiss="alert">
                        <i class="ace-icon fa fa-times"></i>
                    </button><br>
                    <div>
                        @ViewBag.ZamanSil
                    </div>
                    <br>
                </div>
            }



            <div class="add_link"><a href="@Url.Action("TeklifZamaniEkle","Teklifler")" class="btn btn-sm btn-success"><i class="fa fa-plus" aria-hidden="true"></i> Teklif Zamanı Ekle</a></div>
            <div class="tableback">
                <table class="data_table_pagination table table-striped" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Tür</th>
                            <th>Zaman Dilimi</th>
                            <th>Zaman</th>
                            <th>Sil</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Tür</th>
                            <th>Zaman Dilimi</th>
                            <th>Zaman</th>
                            <th>Sil</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td style="text-transform: capitalize">@item.tur</td>
                                <td>@item.zaman_dilimi</td>
                                <td>@item.zaman</td>
                                <td><a href="@Url.Action("TeklifZamanSil","Teklifler", new { id = item.id})" onclick="return confirm('Silinsin mi?')" class="btn btn-danger btn-sm"><i class="fa fa-trash-o" aria-hidden="true"></i> SİL</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
