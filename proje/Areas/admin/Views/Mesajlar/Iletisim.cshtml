@model IEnumerable<proje.Areas.admin.Models.itetisim_mesajlari>

@{
    ViewBag.Title = "Iletisim";
    Layout = "~/Areas/admin/Views/_LayoutAdminPage.cshtml";
}

<div class="connection_way">
    <i class="fa fa-home" aria-hidden="true"></i> <a href="@Url.Action("Index","Home")">Anasayfa</a>
    <span class="con_point">> </span><span>İletişim Mesajları</span>
</div>

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="head_page"><h3>İletişim Mesajları</h3></div>

            @if (ViewBag.MesajSil != null)
            {
                <div class="alert alert-success">
                    <button style="float:right" type="button" class="close" data-dismiss="alert">
                        <i class="ace-icon fa fa-times"></i>
                    </button><br>
                    <div>
                        @ViewBag.MesajSil
                    </div>
                    <br>
                </div>
            }

            @if (ViewBag.MesajHata != null)
            {
                <div class="alert alert-danger">
                    <button style="float:right" type="button" class="close" data-dismiss="alert">
                        <i class="ace-icon fa fa-times"></i>
                    </button><br>
                    <div>
                        @ViewBag.MesajHata
                    </div>
                    <br>
                </div>
            }

            <div class="tableback">
                <table class="data_table_pagination table table-striped" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Durum</th>
                            <th>Adsoy</th>
                            <th>Email</th>
                            <th>Telefon</th>
                            <th>Tarih</th>
                            <th>Local IP</th>
                            <th>Oku</th>
                            <th>Sil</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Durum</th>
                            <th>Adsoy</th>
                            <th>Email</th>
                            <th>Telefon</th>
                            <th>Tarih</th>
                            <th>Local IP</th>
                            <th>Oku</th>
                            <th>Sil</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.durum</td>
                                <td>@item.adsoy</td>
                                <td>@item.email</td>
                                <td>@item.tel</td>
                                <td>@item.tarih</td>
                                <td>@item.ip</td>
                                <td><a href="@Url.Action("Iletisim_oku","Mesajlar",new { id = item.id } )"><i class="fa fa-envelope" aria-hidden="true"></i></a></td>
                                <td><a href="@Url.Action("Iletisim_sil","Mesajlar", new { id = item.id})" onclick="return confirm('Silinsin mi?')" class="btn btn-danger btn-sm"><i class="fa fa-trash-o" aria-hidden="true"></i> SİL</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>





