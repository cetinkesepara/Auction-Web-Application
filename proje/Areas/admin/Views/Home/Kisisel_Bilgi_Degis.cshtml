                                        <th>Adı ve Soyadı</th>
                                        <td><input class="form-control" type="text" name="adsoy" value="@Model.adsoy" /></td>
                                    </tr>
                                    <tr>
                                        <th>Email Adresi</th>
                                        <td><input class="form-control" disabled type="email" value="@Model.email" /></td>
                                    </tr>
                                    <tr>
                                        <th>Şifre</th>
                                        <td><input class="form-control" type="password" name="sifre" value="@Model.sifre" /></td>
                                    </tr>
                                    <tr>
                                        <th>Telefon</th>
                                        <td><input class="form-control" type="text" name="tel" value="@Model.telefon" /></td>
                                    </tr>
                                    <tr>
                                        <th>Şehir</th>
                                        <td>
                                            <select name="sehir" class="form-control">
                                                <option value="@Model.sehir">@Model.sehir</option>
                                                <option value="İstanbul">İstanbul</option>
                                                <option value="Ankara">Ankara</option>
