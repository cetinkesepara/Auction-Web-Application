@model proje.Areas.admin.Models.uyeler

@{
    ViewBag.Title = "Kisisel_Bilgi_Degis";
    Layout = "~/Areas/admin/Views/_LayoutAdminPage.cshtml";
}

<div class="connection_way">
    <i class="fa fa-home" aria-hidden="true"></i> <a href="@Url.Action("Index", "Home")">Anasayfa</a>
    <span class="con_point">> </span><a href="@Url.Action("Profil","Home")">Profil</a>
    <span class="con_point">> </span><span>Profil Düzenle</span>
</div>

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="uye_detay">
                <div class="row">
                    <div class="col-md-4 text-center">
                        @if (ViewBag.ProfilDüzenlemeSonucu != null)
                        {
                            <div class="alert alert-success">
                                <button type="button" class="close" data-dismiss="alert">
                                    <i class="ace-icon fa fa-times"></i>
                                </button><br>
                                <div>
                                    @ViewBag.ProfilDüzenlemeSonucu
                                </div>
                                <br>
                            </div>
                        }
                        <div class="profil_img"><img width="187" height="200" src="~/Assets/uploads/profile_img/@Model.resim" alt="profil_img" /></div>
                        <div class="detay_yetki">
                            @if (Model.yetki.Trim().Equals("Admin"))
                            {
                                <div class="yetki_admin">@Model.yetki</div>
                            }
                            @if (Model.yetki.Trim().Equals("Yönetici"))
                            {
                                <div class="yetki_yonetici">@Model.yetki</div>
                            }

                        </div>
                        <div class="detay_yetki"><a href="@Url.Action("Profil_Resmi_Degis","Home")" class="profil_resmi_degistir">Profil Resmini Değiştir</a></div>
                        <div class="detay_yetki"><a href="@Url.Action("Kisisel_Bilgi_Degis","Home")" class="kisisel_bilgi_duzenle">Kişisel Bilgilerimi Düzenle</a></div>
                    </div>
                    <div class="col-md-8">
                        <div class="details">
