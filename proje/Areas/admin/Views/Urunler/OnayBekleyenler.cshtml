@model IEnumerable<proje.Areas.admin.Models.urunler>

@{
    ViewBag.Title = "OnayBekleyenler";
    Layout = "~/Areas/admin/Views/_LayoutAdminPage.cshtml";
}

<div class="connection_way">
    <i class="fa fa-home" aria-hidden="true"></i> <a href="@Url.Action("Index","Home")">Anasayfa</a>
    <span class="con_point">> </span><span>Onay Bekleyenler</span>
</div>


@if (ViewBag.UrunOnay != null)
{
    <div class="alert alert-success">
        <button style="float:right" type="button" class="close" data-dismiss="alert">
            <i class="ace-icon fa fa-times"></i>
        </button><br>
        <div>
            @ViewBag.UrunOnay
        </div>
        <br>
    </div>
}

@if (ViewBag.RedSilme != null)
{
    <div class="alert alert-success">
        <button style="float:right" type="button" class="close" data-dismiss="alert">
            <i class="ace-icon fa fa-times"></i>
        </button><br>
        <div>
            @ViewBag.RedSilme
        </div>
        <br>
    </div>
}


<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="head_page"><h3>Onay Bekleyen Ürünler</h3></div>

            <div class="tableback">
                <table class="data_table_pagination table table-striped" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Resim</th>
                            <th>Ürün Adı</th>
                            <th>Durum</th>
                            <th>Tarih</th>
                            <th>Detay/İşlem</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Resim</th>
                            <th>Ürün Adı</th>
                            <th>Durum</th>
                            <th>Tarih</th>
                            <th>Detay/İşlem</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var item in Model)
            {
                            <tr>
                                <td><div class="profile_img"><img src="~/Assets/uploads/products_img/@item.resim" alt="profil_resmi" width="35" height="35" /></div></td>
                                <td>@item.adi</td>
                                <td>

                                    @if (item.onay_durumu == "Hayır")
                                    {
                                        <div style="background-color:#B4B4B4;color:#fff;padding:5px" title="Ürün bilgisi kontrol ediliyor">Onay Bekliyor</div>
                                    }   
                                </td>
                                <td>@item.tarih</td>
                                <td><a href="@Url.Action("Onay_urun_islem","Urunler", new { urun_id = item.id })" style="width:80%" class="btn btn-success btn-sm"><i class="fa fa-search-plus" aria-hidden="true"></i> Detay/İşlem </a></td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

